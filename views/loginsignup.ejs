<body class="index-page">
				<div class="container">
		    	        <h3>Health Unified</h3>
		                <div class="row">
							<div class="col-md-12">
								<!-- Tabs with icons on Card -->
								<div class="card card-nav-tabs">
									<div class="header header-primary">
										<div class="nav-tabs-navigation">
											<div class="nav-tabs-wrapper">
												<ul class="nav nav-tabs" data-tabs="tabs" style="display: flex; justify-content: center;">
													<li class="active">
														<a href="#login" data-toggle="tab" aria-expanded="true">
															<i class="material-icons">face</i>
															Login
														<div class="ripple-container"></div></a>
													</li>
													<li class="">
														<a href="#signup" data-toggle="tab" aria-expanded="false">
															<i class="material-icons">chat</i>
															Signup
														<div class="ripple-container"></div></a>
													</li>
												</ul>
											</div>
										</div>
									</div>
									<div class="card-content">
										<div class="tab-content text-center">
											<div class="tab-pane active" id="login">
												<div class="">
													<form class="form" action="/login" method="get">
														<div class="card-content">

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">face</i>
																</span>
																<div class="form-group is-empty"><input type="text" class="form-control" placeholder="Enter your ID" name="name"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">lock_outline</i>
																</span>
																<div class="form-group is-empty"><input type="password" placeholder="Password..." class="form-control" name="password"><span class="material-input"></span></div>
															</div>

															<!-- If you want to add a checkbox to this form, uncomment this code
															<div class="checkbox">
																<label>
																	<input type="checkbox" name="optionsCheckboxes" checked>
																	Subscribe to newsletter
																</label>
															</div> -->
														</div>
														<div class="footer text-center">
															<button style="padding-left: 20px; box-shadow: 5px black; padding-right: 20px;" class="btn btn-primary btn-simple btn-wd btn-lg">Login</button>
														</div>
													</form>
												</div>
											</div>
											<div class="tab-pane" id="signup">
												<div class="">
													<form class="form" method="get" action="loginsignup">
														<div class="card-content">
															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">face</i>
																</span>
																<div class="form-group is-empty"><input type="text" class="form-control" name="User[name]" placeholder="Enter your name"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">email</i>
																</span>
																<div class="form-group is-empty"><input type="text" class="form-control" name="User[email]" placeholder="Aadhar number"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">phone</i>
																</span>
																<div class="form-group is-empty"><input type="text" name="User[phone]" placeholder="Conatct no" class="form-control"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">supervisor_account</i>
																</span>
																<div class="form-group is-empty"><input type="text" name="User[sex]" placeholder="Sex" class="form-control"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">opacity</i>
																</span>
																<div class="form-group is-empty"><input type="text" name="User[blood]" placeholder="Blood " class="form-control"><span class="material-input"></span></div>
															</div>

															<div class="input-group">
																<span class="input-group-addon">
																	<i class="material-icons">lock_outline</i>
																</span>
																<div class="form-group is-empty"><input type="password" name="User[password]" placeholder="Password..." class="form-control"><span class="material-input"></span></div>
															</div>

															<!-- If you want to add a checkbox to this form, uncomment this code
															<div class="checkbox">
																<label>
																	<input type="checkbox" name="optionsCheckboxes" checked>
																	Subscribe to newsletter
																</label>
															</div> -->
														</div>
														<div class="footer text-center">
															<button class="btn btn-primary btn-simple btn-wd btn-lg">Get Started</button>
														</div>
													</form>
												</div>
											</div>
										</div>
