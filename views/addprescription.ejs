<%include partials/header%>
	<h1></h1>
	<h1></h1>
	<div class="container">
		<div class="row">
		<form action="/addprescription/<%=user.aid%>" method = "post">
			<h4 class="col s6 left-align"><b>Hospital Name :</b></h4>
			<input type="text" name="hospital_name">
			<h4 class="col s6 left-align"><b>Doctor ID :</b></h4>
			<input type="text" name="doctorId">
			<h4 class="col s6 right-align"><b>Doctor Name:</b></h4>
			<input type="text" name="doctor_name">		
		</div>
		<h4><b>Patient Details</b> - </h4>
		<h5><b>Name</b>: <%=user.name%></h5>
		<h5><b>Age</b>: <%=user.age%></h5>
		<h3><b>Prescription Details</b> - </h3>
		<div class="row">
			<h4 class="col s3"><b>Disease Identified</b> - </h4>
			<input class="col s5" type="text" name="disease">
		</div>
	
		<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>
		<!-- Modal Structure -->
		<div id="modal1" class="modal">
		<div class="row modal-content">
			<p class="col s4">Name</p>
			<p class="col s4">Days</p>
			<p class="col s4">Timings</p>
		</div>
		<div class="modal-footer">
		  <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
		</div>
		</div>

		<button class="btn waves-effect waves-light" type="submit" name="action" style="background-color: #2bbbad !important;">Submit
			<i class="material-icons right">send</i>
		</button>	
	</div>
		</form>
	
	<script src="https://cdn.quilljs.com/1.3.3/quill.js"></script>
	<script src="js/jquery.min.js" type="text/javascript"></script>
	<script src="js/bootstrap.min.js" type="text/javascript"></script>
	<script src="js/material.min.js"></script>
	<!--    Control Center for Material Kit: activating the ripples, parallax effects-->
	<script src="js/material-kit.min.js" type="text/javascript"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
	<!-- Initialize Quill editor -->
	<script>
	  var quill = new Quill('#editor', {
		theme: 'bubble'
	  });
	  var delta = quill.getContents();
	  console.log(delta);
	</script>
	<script type="text/javascript">
		$(document).ready(function(){
			// the "href" attribute of the modal trigger must specify the modal ID that wants to be triggered
			$('.modal').modal();
		});
	</script>
</body>
</html>
